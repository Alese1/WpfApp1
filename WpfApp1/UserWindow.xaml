<Window x:Class="WpfApp1.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="User" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#2c3e50" CornerRadius="5" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Личный кабинет" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"/>
                    <TextBlock x:Name="txtWelcome" 
                           Text="Добро пожаловать, Пользователь!" 
                           Foreground="#ecf0f1" 
                           FontSize="14"/>
                </StackPanel>

                <Button x:Name="btnLogout" Grid.Column="1" 
                    Content="Выйти" 
                    Background="#e74c3c" 
                    Foreground="White"
                    Padding="10,5" 
                    Click="btnLogout_Click"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <TabControl Grid.Row="1" Margin="0,15,0,0">


            <!-- Вкладка обзора счетов -->
            <TabItem Header="Обзор счетов">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="Мои счета" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                        <!-- Основной счет -->
                        <Border Background="White" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,10"
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Основной счет" 
                                           FontWeight="Bold" 
                                           FontSize="14"/>
                                    <TextBlock x:Name="txtMainAccount" 
                                           Text="**** 4512" 
                                           Foreground="#7f8c8d"/>
                                </StackPanel>

                            </Grid>
                        </Border>

                        <!-- Быстрые операции -->
                        <TextBlock Text="Быстрые операции" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,20,0,10"/>

                        <WrapPanel Margin="0,0,0,15">
                            <Button x:Name="btnTransfer" 
                                Content="Перевод" 
                                Background="#3498db" 
                                Foreground="White"
                                Padding="15,8" 
                                Margin="0,0,10,10" 
                                Click="btnTransfer_Click"/>
                            <Button x:Name="btnPayment" 
                                Content="Оплата" 
                                Background="#9b59b6" 
                                Foreground="White"
                                Padding="15,8" 
                                Margin="0,0,10,10" 
                                Click="btnPayment_Click"/>
                            <Button x:Name="btnDeposit" 
                                Content="Пополнить" 
                                Background="#2ecc71" 
                                Foreground="White"
                                Padding="15,8" 
                                Margin="0,0,10,10" 
                                Click="btnDeposit_Click"/>
                        </WrapPanel>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="История Переводов">
                <DataGrid x:Name="dgUsers" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionChanged="dgUsers_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="200"/>
                        <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="120"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="80"/>
                        <DataGridTextColumn Header="Баланс" Binding="{Binding Balance}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
