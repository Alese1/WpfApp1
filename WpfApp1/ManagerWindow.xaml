<Window x:Class="WpfApp1.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#34495e" CornerRadius="5" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Панель управления менеджера" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold"/>
                    <TextBlock x:Name="txtWelcome" 
                               Text="Добро пожаловать, Менеджер!" 
                               Foreground="#ecf0f1" 
                               FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,15,0">
                    <TextBlock Text="Статус системы:" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Margin="0,0,5,0"/>
                    <TextBlock x:Name="txtSystemStatus" 
                               Text="Активен" 
                               Foreground="#2ecc71" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="btnLogout" Grid.Column="2" 
                        Content="Выйти" 
                        Background="#e74c3c" 
                        Foreground="White"
                        Padding="10,5" 
                        Click="btnLogout_Click"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <TabControl Grid.Row="1" Margin="0,15,0,0">

            <!-- Вкладка управления пользователями -->
            <TabItem Header="Управление пользователями">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель поиска и фильтров -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBox x:Name="txtSearchUsers" 
                                 Width="200" 
                                 Height="30" 
                                 Margin="0,0,10,0"
                                 Text="Поиск пользователей..."/>
                        <ComboBox x:Name="cmbUserFilter" 
                                  Width="150" 
                                  Margin="0,0,10,0"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Все пользователи"/>
                            <ComboBoxItem Content="Активные"/>
                            <ComboBoxItem Content="Заблокированные"/>
                        </ComboBox>
                        <Button x:Name="btnSearchUsers" 
                                Content="Поиск" 
                                Click="btnSearchUsers_Click"/>
                        <Button x:Name="btnAddUser" 
                                Content="Добавить пользователя" 
                                Background="#27ae60" 
                                Foreground="White"
                                Margin="20,0,0,0" 
                                Click="btnAddUser_Click"/>
                    </StackPanel>

                    <!-- Список пользователей -->
                    <DataGrid x:Name="dgUsers" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionChanged="dgUsers_SelectionChanged" Height="180">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                            Binding="{Binding Id}" 
                            Width="50"/>
                            <DataGridTextColumn Header="ФИО" 
                            Binding="{Binding FullName}" 
                            Width="200"/>
                            <DataGridTextColumn Header="Логин" 
                            Binding="{Binding Login}" 
                            Width="120"/>
                            <DataGridTextColumn Header="Email" 
                            Binding="{Binding Email}" 
                            Width="180"/>
                            <DataGridTextColumn Header="Статус" 
                            Binding="{Binding Status}" 
                            Width="80"/>
                            <DataGridTextColumn Header="Баланс" 
                            Binding="{Binding Balance}" 
                            Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!-- Статистика -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Всего пользователей:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,5,0"/>
                        <TextBlock x:Name="txtTotalUsers" Text="0"/>
                        <TextBlock Text=" | Активных:" 
                                   FontWeight="Bold" 
                                   Margin="10,0,5,0"/>
                        <TextBlock x:Name="txtActiveUsers" Text="0"/>
                        <TextBlock Text=" | Заблокированных:" 
                                   FontWeight="Bold" 
                                   Margin="10,0,5,0"/>
                        <TextBlock x:Name="txtBlockedUsers" Text="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>